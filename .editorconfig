root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 160
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{*.yaml,*.yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[{**/layouts/shortcodes/*.html, **/layouts/_default/_markup/*.html}]
insert_final_newline = false
